---
import Busqueda from './Busqueda.astro';

interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: 'Inicio', url: '/' },
];

const socialIcons = [
  {
    name: 'GitHub',
    url: 'https://github.com/cesarintriago',
    url: 'https://github.com/cesarintriago',
    icon: 'i-uil-github',
  },
  {
    name: 'Twitter',
    url: 'https://www.twitter.com/cesarintriago',
    icon: 'i-uil-twitter',
  },
  { name: 'Linkedin', url: 'https://www.linkedin.com/in/cesarintriagolpz', icon: 'i-uil-linkedin' },
];

const { pageTitle } = Astro.props;
---

<header class='border-b-2 border-black flex justify-between p-4 items-center'>
  {pageTitle && <h1 class='hidden'>{pageTitle}</h1>}
  <a href='/' title='Back to Home'>
    <p class='righteous md:text-5xl'>Manual de Filosofía en español</p>
  </a>
  
  <div class="relative">
    <input 
      type="text" 
      id="search-input"
      placeholder="Buscar en el manual..." 
      class="px-4 py-2 border-2 border-black rounded-none focus:outline-none focus:ring-2 focus:ring-green-500 w-64"
    />
    <ul id="search-results" class="absolute top-full left-0 right-0 bg-white border-2 border-black shadow-lg mt-1 max-h-80 overflow-y-auto hidden z-50">
      <!-- Los resultados se insertarán aquí -->
    </ul>
    <div id="search-loading" class="absolute top-full left-0 right-0 bg-white border-2 border-black shadow-lg mt-1 p-4 hidden z-50">
      <p class="text-center text-gray-500">Buscando...</p>
    </div>
  </div>

  <nav class='hidden md:inline-block'>
    <h2 class='hidden'>Navigation</h2>
    <ul class='flex gap-8 poppins'>
      {
        navigationItems.map((item) => (
          <li>
            <a
              class='text-lg font-medium hover:text-green hover:underline transition-all duration-150 ease-in-out'
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class='hover:text-green hover:underline transition-all duration-150 ease-in-out'
              target='_blank'
              title={`'Ver @cesarintriago en ${item.name}`}
            >
              <div class:list={[item.icon, 'w-6 h-6']} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script src="/js/search.js" is:inline></script>
